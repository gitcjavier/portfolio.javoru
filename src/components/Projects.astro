---
import SqlServer from './icons/SqlServer.astro'
import Photoshop from './icons/Photoshop.astro'
import Tailwind from './icons/Tailwind.astro'
import LinkButton from './LinkButton.astro'
import  GitHub  from './icons/GitHub.astro'
import  Link  from './icons/Link.astro'
import  Behance  from './icons/Behance.astro'
import  Jumpseller  from './icons/Jumpseller.astro'
const TAGS = {
    PHOTOSHOP: {
        name: "Photoshop",
        class: 'bg-black text-white',
        icon: Photoshop,
    },
    ILLUSTRATOR: {
        name: 'Illustrator',
        class: 'bg-black text-white',
        icon: "",
    },
    INDESIGN: {
        name: 'InDesign',
        class: 'bg-black text-white',
        icon: "",
    },
    SQL: {
        name: 'SQL',
        class: 'bg-black text-white',
        icon: SqlServer,
    },
    HTML: {
        name: 'HTML',
        class: 'bg-black text-white',
    },
    CSS: {
        name: 'CSS',
        class: 'bg-black text-white',
    },
    JAVASCRIPT: {
        name: 'JavaScript',
        class: 'bg-black text-white',
    },
    JUMPSELLER: {
        name: 'Jumpseller',
        class: 'bg-black text-white',
        icon: Jumpseller,
    },
}
const projects = [
    {
        title: 'Poster Mob Psycho 100',
        description: 'Poster para el anime Mob Psycho 100',
        image: '/src/assets/projects/mob.png',
        link: 'https://www.behance.net/gallery/227800757/Poster-Chigeo-Kageyama',
        tags: [TAGS.PHOTOSHOP],
        github: '',
    },
    {
        title: 'Chetomi',
        description: 'Ecommerce de Chetomi - Comida Argentina',
        image: '/src/assets/projects/chetomiweb.webp',
        link: 'https://www.chetomi.cl',
        tags: [TAGS.JUMPSELLER],
        github: '',
    }
]
---
<div class="flex flex-col gap-y-16">
    {
      projects.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
    <div class="w-full md:w-1/2">
      <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
        <img alt="Recién llegado vs 5 años en Nueva Zelanda" loading="lazy" src={image} class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-100 md:group-hover:scale-105" />
      </div>
    </div>
  
    <div class="w-full md:w-1/2 md:max-w-lg">
      <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
        {title}
      </h3>
      <div class="flex flex-wrap mt-2">
        <ul class="flex flex-row mb-2 gap-x-2">
            {tags.map((tag) => (
              <li>
                <span
                  class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                >
                  <tag.icon class="size-4" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
  
        <div class="mb mt-2 text-gray-700 dark:text-gray-400">{description}</div>
        <footer class="flex items-end justify-start mt-4 gap-x-4">
             {link && link.includes('behance') && (
               <LinkButton href={link}>
                 <Behance class="size-6" />
                 Behance
               </LinkButton>
             )}
             {github && (
               <LinkButton href={github}>
                 <GitHub class="size-6" />
                 GitHub
               </LinkButton>
             )}
             {link && !link.includes('behance') && (
               <LinkButton href={link}>
                 <Link class="size-4" />
                 Preview
               </LinkButton>
             )}
            </footer>
      </div>
    </div>
  </article>
      ))
    }
  </div>